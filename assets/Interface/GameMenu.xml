<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller = "ourgame.StartScreenController">
        <layer id="background" childLayout = "center">
            <panel childLayout = "center">
                <image filename = "Interface/MainScreen.jpeg" imageMode="resize:40,490,110,170,40,560,40,270,40,560,40,40" height = "100%" width = "100%"/>
            </panel>
        </layer>
        <layer id = "foreground" childLayout  = "vertical">
            <panel id = "top-filler" height = "75%" width = "100%" childLayout = "vertical"></panel>
            <panel id = "panel-bottom" height = "25%" width = "75%" align = "center" childLayout = "vertical">
                <control name = "button" height ="50%" width = "75%" label = "Start" id = "StartButton" align = "center" valign = "center" visibleToMouse = "true">
                    <interact onClick = "changeScreens(mainMenu)"/>
                </control>                
            </panel>
        </layer>
    </screen>
    <screen id = "mainMenu" controller = "ourgame.MenuScreenController">
        <layer id = "foreground" childLayout = "vertical">
            <panel id = "topText" height = "25%" width = "50%" align = "center" valign = "center" childLayout = "vertical">
                <text text = "Welcome to the game!" font = "Interface/Fonts/ArialBlack-36.fnt" align = "center" valign = "center" />
            </panel>
            <panel id = "MenuItems" height = "75%" width = "75%" align = "center" valign = "center" childLayout = "vertical">
                <panel id = "button1" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "New Game" id = "newGameButton" align = "center" valign = "center">
                        <interact onClick = "changeScreens(levelSelect)"/>
                    </control>
                </panel>
                <panel id = "button2" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "Load Game" id = "loadGameButton" align = "center" valign = "center"></control>
                </panel>
                <panel id = "button3" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "Settings" id = "settingsButton" align = "center" valign = "center"></control>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id = "levelSelect" controller = "ourgame.LevelScreenController">
        <layer id = "foreground" childLayout = "vertical">
            <panel id = "topText" height = "25%" width = "50%" align = "center" valign = "center" childLayout = "vertical">
                <text id = "levelText" text = "Level Select Menu" font = "Interface/Fonts/ArialBlack-36.fnt" align = "center" valign = "center" />
            </panel>
            <panel id = "LevelSelectItems" height = "75%" width = "75%" align = "center" valign = "center" childLayout = "vertical">
                <panel id = "button1" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "Level One" id = "newGameButton" align = "center" valign = "center">
                        <interact onClick = "selectLevel(Level One)"/>
                    </control>
                </panel>
                <panel id = "button2" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "Level Two" id = "newGameButton" align = "center" valign = "center"></control>
                </panel>
                <panel id = "button3" height = "20%" width = "75%" align = "center" valign = "center" childLayout = "center">
                    <control visibleToMouse = "true" name = "button" height = "75%" width = "100%" label = "Level Three" id = "newGameButton" align = "center" valign = "center"></control>
                </panel>
                <panel id = "bottomButtons" height = "20%" width = "100%" align = "center" valign = "center" childLayout = "horizontal">
                    <panel id = "QuitButton" height = "100%" width = "50%" align = "center" valign = "center" childLayout = "center">
                        <control visibleToMouse = "true" name = "button" height = "40%" width = "75%" label = "Quit" id = "newGameButton" align = "center" valign = "center">
                            <interact onClick = "quitGame()"/>
                        </control>
                    </panel>
                    <panel id = "QuitButton" height = "100%" width = "50%" align = "center" valign = "center" childLayout = "center">
                        <control visibleToMouse = "true" name = "button" height = "40%" width = "75%" label = "Play" id = "newGameButton" align = "center" valign = "center">
                            <interact onClick = "startLevel()"/>
                        </control>
                    </panel>
                </panel>
            </panel>
        </layer>        
    </screen>
</nifty>